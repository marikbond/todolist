<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span data-callback="onCancelClick" aria-hidden="true">&times;</span>
    </button>
    <h3 class="modal-title">NEW TASK</h3>
</div>
<div class="modal-body">
    <h5>Title</h5>
    <input id="task-title" type="text" class="form-control" placeholder="Title">
    <h5>Status</h5>
    <select id="task-status" class="form-control">
        <% statuses.forEach(function (status) { %>
        <option value="<%= status.id %>"><%= status.status %></option>
        <% }) %>
    </select>
    <h5>Description</h5>
    <textarea id="task-description" class="form-control" rows="6" placeholder="Description"></textarea>
</div>
<div class="modal-footer">
    <button type="button" data-callback="onCancelClick" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" data-callback="onSaveClick" id="save-task-btn" class="btn btn-primary" data-dismiss="modal">Save</button>
</div>