<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a href="#" class="navbar-brand" id="header-logo">TodoList</a>
        </div>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="nav navbar-nav navbar-right navbar-hover">
                <li><a href="#" id="add-task-btn" data-toggle="modal" data-target="#add-task-modal">Add Task</a></li>
                <li><a href="#" id="sign-in-btn">Sign In</a></li>
                <li><a href="#" id="sign-up-btn">Sign Up</a></li>
            </ul>
        </div>
    </div>
