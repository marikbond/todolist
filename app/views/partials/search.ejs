<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <p id="search-form-text">Search for tasks</p>
                <p id="search-form-subtext">(if you r not afraid, of course)</p>
                <form id="search-form" class="navbar-form navbar-left center-block">
                    <div class="form-group">
                        <input name="text" type="text" class="form-control" placeholder="Search">
                    </div>
                    <select name="status" class="form-control">
                        <option value="all"></option>
                        <% statuses.forEach(function (status) { %>
                        <option value="<%= status.id %>"><%= status.status %></option>
                        <% }) %>
                    </select>
                    <select name="direction" class="form-control">
                        <option value="asc">Newest first</option>
                        <option value="desc">Oldest first</option>
                    </select>
                    <button id="search-form-submit" type="submit" class="btn btn-default">Search</button>
                </form>
            </div>
        </div>
    </div>
</div>